{
  "name": "vality",
  "description": "A TypeScript schema descriptor library with zero dependencies.",
  "version": "5.2.4",
  "author": "Jesper Engberg <jeengbe@gmail.com>",
  "homepage": "https://ts-vality.io",
  "repository": {
    "type": "git",
    "url": "git://github.com/jeengbe/vality.git",
    "directory": "packages/vality"
  },
  "keywords": [
    "javascript",
    "typescript",
    "schema",
    "validation",
    "transformer"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeengbe/vality/issues"
  },
  "devDependencies": {
    "@swc/core": "1.3.4",
    "@swc/jest": "0.2.23",
    "@types/jest": "29.1.1",
    "@types/node": "18.7.23",
    "concurrently": "7.5.0",
    "jest": "29.1.2",
    "jest-diff": "29.1.2",
    "ts-expect": "1.3.0",
    "typescript": "4.8.4"
  },
  "scripts": {
    "build": "concurrently \"tsc -p src/tsconfig.cjs.json\" \"tsc -p src/tsconfig.mjs.json\"",
    "lint": "echo \"Error: no linting configured\"",
    "test:unit": "jest tests --ci",
    "test:types": "tsc --noEmit -p tests/tsconfig.json",
    "typecheck": "concurrently \"tsc --noEmit -p src/tsconfig.cjs.json\" \"tsc --noEmit -p src/tsconfig.mjs.json\"",
    "test:coverage": "pnpm run test --coverage",
    "test:watch": "jest --watchAll --coverage tests"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    },
    "./*": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/esm/*.js",
      "require": "./dist/cjs/*.js",
      "default": "./dist/esm/*.js"
    },
    "./package.json": "./package.json"
  },
  "typings": "dist/typings/index.d.ts",
  "typescript": {
    "definition": "dist/typings/index.d.ts"
  }
}
