{
	"name": "vality",
	"description": "A TypeScript schema descriptor library with zero dependencies.",
	"version": "5.2.2",
	"author": "Jesper Engberg <jeengbe@gmail.com>",
	"homepage": "https://ts-vality.io",
	"repository": {
		"type": "git",
		"url": "https://github.com/jeengbe/vality.git"
	},
	"keywords": [
		"javascript",
		"typescript",
		"schema",
		"validation",
		"transformer"
	],
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/jeengbe/vality/issues"
	},
	"devDependencies": {
		"@swc/core": "1.3.3",
		"@swc/jest": "0.2.23",
		"@types/jest": "29.1.0",
		"@types/node": "18.7.23",
		"jest": "29.1.1",
		"jest-diff": "29.1.0",
		"typescript": "4.8.4"
	},
	"main": "./index.js",
	"exports": {
		"import": "./mjs/index.js",
		"require": "./index.js"
	},
	"scripts": {
		"build": "tsc -p src/tsconfig.json && tsc -p src/tsconfig.mjs.json",
		"lint": "echo \"Error: no linting configured\"",
		"test": "jest tests --ci",
		"typecheck": "tsc --noEmit -p src/tsconfig.json && tsc --noEmit -p src/tsconfig.mjs.json",
		"test:coverage": "pnpm run test --coverage",
		"test:watch": "jest --watchAll --coverage tests"
	}
}
